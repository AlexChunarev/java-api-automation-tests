{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "username": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "surname": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["id", "username", "email", "name", "surname"],
  "additionalProperties": false
}